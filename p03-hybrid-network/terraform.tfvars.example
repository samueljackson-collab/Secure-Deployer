###############################################################################
# P03 Hybrid Network - Example Variable Values
#
# Copy this file to terraform.tfvars and update values for your environment.
#   cp terraform.tfvars.example terraform.tfvars
#
# IMPORTANT: Never commit terraform.tfvars to version control if it contains
# sensitive values. Pre-shared keys should be injected via environment
# variables (TF_VAR_tunnel1_preshared_key) or a secrets manager.
###############################################################################

# -- General ------------------------------------------------------------------
aws_region  = "us-east-1"
environment = "production"

common_tags = {
  Owner      = "platform-team"
  CostCenter = "infrastructure"
}

# -- VPC ----------------------------------------------------------------------
vpc_name             = "hybrid-network"
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# -- Virtual Private Gateway --------------------------------------------------
# AWS-side BGP ASN (private range 64512-65534)
amazon_side_asn = 64512

# -- Customer Gateway (on-premises device) ------------------------------------
# Replace with your on-premises VPN device public IP
cgw_ip_address = "203.0.113.1"

# On-prem BGP ASN
cgw_bgp_asn = 65000

# -- VPN Connection -----------------------------------------------------------
# Set to true for static routing, false for BGP dynamic routing
vpn_static_routes_only = false

# On-premises network CIDRs reachable through VPN
on_prem_cidrs = ["192.168.0.0/16", "172.16.0.0/12"]

# Tunnel inside CIDRs (optional - AWS auto-assigns if omitted)
# Must be /30 within 169.254.0.0/16
# tunnel1_inside_cidr = "169.254.10.0/30"
# tunnel2_inside_cidr = "169.254.11.0/30"

# Pre-shared keys - DO NOT set here in production!
# Use: export TF_VAR_tunnel1_preshared_key="YourSecureKey1Here"
# Use: export TF_VAR_tunnel2_preshared_key="YourSecureKey2Here"
# tunnel1_preshared_key = null
# tunnel2_preshared_key = null

# -- Security Groups ----------------------------------------------------------
# CIDR allowed SSH to bastion (e.g., corporate VPN egress IP)
bastion_cidr = "198.51.100.0/24"

# TCP ports allowed from on-prem through VPN
allowed_vpn_ports = [443, 8080, 8443]
